<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.antoshkaplus.fly.app">

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher" android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="Fly" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ListSearchActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <provider
            android:name="WordContentProvider"
            android:authorities="com.antoshkaplus.fly.app.WordContentProvider"
            android:readPermission="com.antoshkaplus.fly.app.READ_MY_DATA">
        </provider>

    </application>

</manifest>
